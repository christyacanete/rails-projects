<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="jumbotron text-center py-5">
    <h1 class="display-4">Welcome to the Sample App</h1>
    <p class="lead">
      This is the home page for the
      <a href="https://www.railstutorial.org/">Ruby on Rails Tutorial</a>
      sample application.
    </p>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary mt-3" %>
  </div>
  <div class="text-center mt-4">
    <%= link_to image_tag("rails.png", alt: "Rails logo", width: "200px"), "https://rubyonrails.org/" %>
  </div>
<% end %>  <!-- Closing the if-else block -->
