<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: @user %>
  
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  
  <div class="actions">
    <%= f.submit "Save changes", class: "btn btn-primary" %>
  </div>
<% end %>