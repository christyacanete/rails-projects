<% if reservations.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Guests</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% reservations.each do |reservation| %>
        <tr>
          <td><%= reservation.time_slot.date %></td>
          <td>
            <%= reservation.time_slot.start_time.strftime("%I:%M %p") %> - 
            <%= reservation.time_slot.end_time.strftime("%I:%M %p") %>
          </td>
          <td><%= reservation.number_of_people %></td>
          <td>
            <%= button_to "Cancel", reservation_path(reservation), method: :delete, data: { turbo: true, confirm: "Are you sure you want to cancel this reservation?" }, class: "btn btn-cancel btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>You have no reservations yet.</p>
<% end %>
